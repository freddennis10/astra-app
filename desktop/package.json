{
  "name": "astra-desktop",
  "version": "1.0.0",
  "description": "Astra Desktop App - Electron",
  "main": "src/main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest",
    "lint": "eslint . --ext .js,.ts"
  },
  "build": {
    "appId": "com.astra.desktop",
    "productName": "Astra",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  },
  "keywords": ["electron", "desktop", "astra", "social-media"],
  "author": "Neo Silver",
  "license": "ISC",
  "dependencies": {
    "electron-updater": "^6.1.0",
    "electron-store": "^8.1.0",
    "electron-log": "^4.4.0",
    "auto-launch": "^5.0.0",
    "node-notifier": "^10.0.0",
    "axios": "^1.5.0",
    "socket.io-client": "^4.7.0",
    "moment": "^2.29.0",
    "lodash": "^4.17.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^8.50.0",
    "jest": "^29.6.0",
    "typescript": "^5.2.0",
    "@types/node": "^20.5.0"
  }
}
